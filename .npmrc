# npm-optimized configuration for faster installs
registry=https://registry.npmjs.org/

# Faster networking
fetch-retries=2
fetch-retry-factor=2
fetch-retry-mintimeout=1000
fetch-retry-maxtimeout=10000
fetch-timeout=30000

# Parallel processing for npm
maxsockets=16

# Skip optional dependencies properly (no warnings)
omit=optional

# Reduce package registry requests
save-exact=false

# Legacy peer deps for compatibility
legacy-peer-deps=true
